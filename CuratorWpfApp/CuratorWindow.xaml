<Window x:Class="CuratorWpfApp.CuratorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CuratorWpfApp"
        mc:Ignorable="d"
        Title="CuratorWindow" Height="450" Width="950"
        SizeToContent="WidthAndHeight"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <StackPanel Orientation="Horizontal">
            <StackPanel HorizontalAlignment="Left" 
                        Width="150"
                        Background="LightSkyBlue">
                <Button x:Name="btnReport"
                        Content="Отчет за семестр"
                        Style="{StaticResource btnMenuStyle}"/>
                <Button x:Name="btnStudentsList"
                        Content="Список студентов"
                        Style="{StaticResource btnMenuStyle}"/>
                <Button x:Name="btnDebt"
                        Content="Долги"
                        Style="{StaticResource btnMenuStyle}"/>
                <Button Name="btnExit"
                        Content="Выйти из аккаунта"
                        Style="{StaticResource btnMenuStyle}"/>
            </StackPanel>
            <Frame Name="frameMain"
                   NavigationUIVisibility="Hidden"
                   Width="800"
                   HorizontalAlignment="Right"
                   Background="AliceBlue"/>

        </StackPanel>
    </Grid>
</Window>
